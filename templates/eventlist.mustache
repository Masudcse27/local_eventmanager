<h2>{{heading}}</h2>

{{#events}}
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="">
                <tr>
                    <th>Event Title</th>
                    <th>Event Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {{#list}}
                    <tr>
                        <td>{{title}}</td>
                        <td>{{eventdate}}</td>
                        <td>
                            <a href="#" class="btn btn-sm btn-secondary">Edit</a>
                            <a href="#" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                {{/list}}
            </tbody>
        </table>
    </div>
{{/events}}

{{^events}}
    <div>No events found.</div>
{{/events}}